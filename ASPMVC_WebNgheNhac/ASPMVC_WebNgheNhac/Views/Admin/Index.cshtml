@model ASPMVC_WebNgheNhac.Controllers.AdminController.IndexStruct
@{
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
@{
    string[] lstr = { "bg-primary", "bg-warning", "bg-success", "bg-danger", "bg-dark", "bg-info", "bg-secondary" };
    int numberofLstr = lstr.Count();
}
<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Admin")">Làm mới</a>
            </li>
            <li class="breadcrumb-item active">Lối tắt nhanh</li>
        </ol>
        
        <!-- Icon Cards-->
        <div class="row">
                @{
                    int j = 0;
                    for (int i = 0; i < Model.Count; i++)
                    {
                        if (j >= numberofLstr)
                        {
                            j = 0;
                        }
                        string tam = "card text-white " + lstr[j++] + " o-hidden h-100";
                        <div class="col-xl-3 col-sm-6 mb-3">
                            <div class="@tam">
                                <div class="card-body">
                                    @*<div class="card-body-icon">
                                        <i class="fas fa-fw fa-comments"></i>
                                    </div>*@
                                    <div class="mr-5">@Model.lString[i]</div>
                                </div>
                                <a class="card-footer text-white clearfix small z-1" href="@Url.Action(Model.lAction[i], Model.lController[i], new { id = Model.lParameter[i] as string })">
                                    <span class="float-left">View Details</span>
                                    <span class="float-right">
                                        <i class="fas fa-angle-right"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                    }
                }
        </div>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- /.content-wrapper -->