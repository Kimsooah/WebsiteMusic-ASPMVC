
@{
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Bạn thực sự muốn xoá bản ghi?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Chọn "Xoá bản ghi" nếu bạn muốn xoá.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button formmethod="post" class="btn btn-primary" href="@Url.Action("Delete", "Admin")">Xoá bản ghi</button>
            </div>
        </div>
    </div>
</div>