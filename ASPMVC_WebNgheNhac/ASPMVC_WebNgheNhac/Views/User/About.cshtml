<!-- Home -->

<div class="home">
    <div class="home_inner">
        <!-- Image artist:  -->
        <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="/Assets/images/about.jpg" data-speed="0.8"></div>
        <div class="home_container">
            <div class="home_content text-center">
                <div class="home_subtitle">Bởi vì</div>
                <div class="home_title">Tôi có thể</div>
            </div>
        </div>
    </div>
</div>

<!-- Discs -->

<div class="discs">
    <center><h2>Danh sách thể loại phong phú</h2></br></center>
    <div class="container">
        <div class="row discs_row">

            <!-- Disc -->
            @{ 
                string idstr = "disc_content_";
                int idem = 1;
            }
            @foreach (var item in Model)
            {
                string tamm = idstr + idem;
                <div class="col-xl-4 col-md-6">
                    <div class="disc">
                        <a href="#">
                            <div class="disc_image"><img src="@item.DuongDanAnh" alt="#"></div>
                            <div class="disc_container">
                                <div>
                                    <div class="@tamm">
                                        <div class="disc_title">@item.TenTheLoai</div>
                                        <div class="disc_subtitle">@item.TenTheLoai</div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

