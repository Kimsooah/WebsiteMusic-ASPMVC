<div class="home">
    <div class="home_inner">
        <!-- Image artist:  -->
        <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="/Assets/images/maxresdefault.jpg" data-speed="0.05"></div>
        <div class="home_container">
            <div class="home_content text-center">
                <div class="home_subtitle">Âm nhạc</div>
                <div class="home_title">Là bất tận</div>
            </div>
        </div>
    </div>
</div>

<!-- List music -->

<div class="discs">
    <center><h2>Các ca khúc cập nhật liên tục</h2></br></center>
    <div class="container">
        <div class="row discs_row">

            <!-- Disc -->
            @{
                string idstr = "disc_content_";
                int idem = 3;
            }
            @foreach (var item in Model)
            {
                string tamm = idstr + idem;
                string tentacgia = new ASPMVC_WebNgheNhac.Models.DbMusicWebsite().TACGIAs.Find(item.MaTacGia).HoTen;
                <div class="col-xl-4 col-md-6">
                    <div class="disc">
                        <a href="#">
                            <div class="disc_image"><img src="@item.DuongDanAnh" alt="#"></div>
                            <div class="disc_container">
                                <div>
                                    <div class="@tamm">
                                        <div class="disc_title">@tentacgia</div>
                                        <div class="disc_subtitle">@item.TenBanNhac</div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
