<div class="home">
    <div class="home_inner">
        <!-- Image artist:  -->
        <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="/Assets/images/maxresdefault.jpg" data-speed="0.05"></div>
        <div class="home_container">
            <div class="home_content text-center">
                <div class="home_subtitle">Âm nhạc</div>
                <div class="home_title">Là bất tận</div>
            </div>
        </div>
    </div>
    <!-- Audio -->
    <p align="right" width="100">
        <audio id="myAudioControls" controls="controls">
            <source id="audioSource" src="@Model[0].DuongDanBanNhac" type="audio/mp3" />
            <source id="audioSource" src="@Model[0].DuongDanBanNhac" type="audio/ogg" />
            Trình duyệt của bạn không được hỗ trợ phát nhạc trực tuyến, xin hãy chắc chắn trình duyệt đã được cập nhật lên bản mới nhất.
        </audio>
    </p>
</div>



<!-- List music -->

<div class="discs">
    <center><h2>Các ca khúc cập nhật liên tục</h2></center>
    <div class="container">
        <div class="row discs_row">

            <!-- Disc -->
            @{
                string idstr = "disc_content_";
                int idem = 3;
            }
            @for (int i = 0; i < ViewBag.NumberShow && i < Model.Count; i++)
            {
                string tamm = idstr + idem;
                <div class="col-xl-4 col-md-6">
                    <div class="disc">
                        <a href="#" onclick="JS_PlayAudio('@Model[i].DuongDanBanNhac')">
                            <div class="disc_image"><img src="@Model[i].DuongDanAnh" alt="#"></div>
                            <div class="disc_container">
                                <div>
                                    <div class="@tamm">
                                        <div class="disc_title">@Model[i].HoTen</div>
                                        <div class="disc_subtitle">@Model[i].TenBanNhac</div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<br />

<!-- Trang đang hiển thị -->
<center>
    <div>
        @{
            for (int i = 0; i < ViewBag.NumberPages; i++)
            {
                <a href="@Url.Action("Music", "User", new { id = ViewBag.NumberShow, sotrang = (i + 1) })"> @(i+1) </a>
            }
        }
    </div>
</center>

<!-- JS for fun -->
<script>
    function JS_PlayAudio(path) {
        document.getElementById("myAudioControls").pause();
        document.getElementById("myAudioControls").setAttribute('src', path);
        document.getElementById("myAudioControls").load();
        document.getElementById("myAudioControls").play();
    }
</script>